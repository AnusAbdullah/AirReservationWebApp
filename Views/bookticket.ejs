<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/dstyles.css" />
    <!-- <link rel="stylesheet" href="/style.css"> -->
    <title>Admin Panel</title>
  </head>

  <body>
    <div class="side-menu">
      <div class="mt-5"></div>
      <!-- <h4>Airline Reservation System</h4> -->
      <ul>
        <li class="bi bi-grid-fill">
          &nbsp; <span><a href="/api/cdashboard">Dashboard</a></span>
        </li>
        <li class="bi bi-people">
          &nbsp;<span><a href="/api/bookticket">Book a ticket</a></span>
        </li>
        <li class="bi bi-building">
          &nbsp;<span><a href="/api/cairlines">Available Airlines</a></span>
        </li>
        <!-- <li class="bi bi-airplane">&nbsp;<span><a href="/api/airplanes">Airplanes</a></span> </li> -->
        <li class="bi bi-box-arrow-left">
          &nbsp;<span><a href="/api/logout">Log out</a></span>
        </li>
      </ul>
    </div>
    <div class="container">
      <div class="header">
        <div class="nav">
          <div class="brand-name">
            <h2>Airline Reservation System</h2>
          </div>
          <!-- <a href="#" class="btn">Search</a>&nbsp;&nbsp;
                <a href="#" class="btn">Delete</a>&nbsp;&nbsp; -->
          <div class="position-absolute top-0 end-0">
            <div class="bi bi-people"></div>
            <h4><%=data%></h4>
          </div>
          <!-- <div class="user position">
                   
                </div> -->
        </div>
      </div>
      <form
        class="row mt-5 gy-2 gx-3 align-items-center"
        action="/api/addairplanes"
        method="post"
      >
        <h3 class="mt-5">Book a ticket</h3>
        <div class="col-auto">
          <label for="autoSizingInput">ID:</label>
          <input
            type="text"
            name="id"
            class="form-control"
            id="autoSizingInput"
            placeholder="Enter ID.."
            required
          />
        </div>

        <div class="col-auto">
          <label for="autoSizingInputGroup">Name</label>
          <div class="input-group">
            <div class="input-group-text"></div>
            <input
              type="text"
              name="name"
              class="form-control"
              id="autoSizingInputGroup"
              placeholder="Enter Name..."
              required
            />
          </div>
        </div>

        <div class="col-auto">
          <label for="autoSizingInputGroup">Departure</label>
          <div class="input-group">
            <div class="input-group-text"></div>
            <input
              type="text"
              name="departure"
              class="form-control"
              id="autoSizingInputGroup"
              placeholder="Enter Departure..."
              required
            />
          </div>
        </div>

        <div class="col-auto">
          <label for="autoSizingInputGroup">Arrival</label>
          <div class="input-group">
            <div class="input-group-text"></div>
            <input
              type="text"
              name="arrival"
              class="form-control"
              id="autoSizingInputGroup"
              placeholder="Enter Arrival..."
              required
            />
          </div>
        </div>

        <div class="col-auto">
          <label for="autoSizingInputGroup">Time</label>
          <div class="input-group">
            <div class="input-group-text"></div>
            <input
              type="text"
              name="time"
              class="form-control"
              id="autoSizingInputGroup"
              placeholder="Enter time..."
              required
            />
          </div>
        </div>

        <div class="col-auto">
          <label for="autoSizingInputGroup">Price</label>
          <div class="input-group">
            <div class="input-group-text"></div>
            <input
              type="text"
              name="price"
              class="form-control"
              id="autoSizingInputGroup"
              placeholder="Enter price..."
              required
            />
          </div>
        </div>

        <div class="col-auto">
          <label for="autoSizingInputGroup">Airline ID</label>
          <div class="input-group">
            <div class="input-group-text"></div>
            <input
              type="text"
              name="airlinesid"
              class="form-control"
              id="autoSizingInputGroup"
              placeholder="Enter Airline ID..."
              required
            />
          </div>
        </div>

        <div>
          <button type="submit" class="btn btn-primary">Insert</button>
        </div>
      </form>
    </div>
  </body>
</html>
